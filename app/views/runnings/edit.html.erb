    ALL
<% end %>
<%= link_to activity_list_runnings_path(@activity_list) do %>
  RUNNING
<% end %>
<%= link_to activity_list_winter_sports_path(@activity_list) do %>
  WINTER SPORT
<% end %>
<%= link_to activity_list_cyclings_path(@activity_list) do %>
  CYCLING
<% end %>
<%= link_to activity_list_swimmings_path(@activity_list) do %>
  SWIMMING
<% end %>
<%= link_to activity_list_walkings_path(@activity_list) do %>
  WALKING
<% end %>
<% minutes = @running.time.to_i.divmod(60) %>
<% hours = minutes[0].divmod(60) %>
<%= simple_form_for [@activity_list, @running] do |f| %>
  <%= f.input :name, label: false %>
  <div class="d-flex">
    <%= f.input :hours, label: false, input_html: {value: hours[0]} %>  h
    <%= f.input :minutes, label: false, input_html: {value: format('%02d', hours[1])} %>  min
    <%= f.input :seconds, label: false, input_html: {value: format('%02d', minutes[1])} %>  sec
  </div>
  <div class="d-flex">
    <%= f.input :distance, label: false %>  km
  </div>
  <div class="d-flex">
    <%= f.input :avg_heart_rate, label: false %> Bpm
  </div>
  <div class="d-flex">
    <%= f.input :max_heart_rate, label: false %> Bpm
  </div>
  <div class="d-flex">
   <%= f.input :max_speed, label: false %> km/h
  </div>
  <div class="d-flex">
   <%= f.input :elevation_gain, label: false %> m
  </div>
  <%= f.input :friends, collection: ["Charlotte", "Rodrigue", "Lisa"],label: false %>
  <%= f.input :date %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>
